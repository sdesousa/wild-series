{# templates/program/show.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Program{% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Categorie : {{ program.category.name }}</p>

            <strong>Acteur :</strong>
            <ul>
                {% for actor in program.actors %}
                    <li><a href="{{ path('actor_show', {'slug': actor.slug}) }}">{{ actor.name }}</a></li>
                {% else %}
                    <li>Aucun acteur pour cette série</li>
                {% endfor %}
            </ul>

            <strong>Saison :</strong>
            <ul>
                {% for season in program.seasons %}
                    <li><a href="{{ path('season_show', {'id': season.id }) }}">{{ season.year }}</a></li>
                {% else %}
                    <li>Aucune saison pour cette série</li>
                {% endfor %}
            </ul>

        </div>
    </div>

    <a class="btn btn-lg" href="{{ path('program_index') }}">back to list</a>
    <a class="btn btn-lg" href="{{ path('program_edit', {'slug': program.slug}) }}">edit</a>
    {{ include('program/_delete_form.html.twig') }}
    <a class="btn btn-lg" href="/">Retour à l'accueil</a>
{% endblock %}

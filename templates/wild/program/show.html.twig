{# templates/wild/show.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}{{ program.title }}{% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Categorie : {{ program.category.name }}</p>

            <h2 class="mt-4">Acteur :</h2>
            <ul>
                {% for actor in program.actors %}
                    <li><a href="{{ path('wild_show_actor', {'slug': actor.slug}) }}">{{ actor.name }}</a></li>
                {% else %}
                    <li>Aucun acteur pour cette série</li>
                {% endfor %}
            </ul>

            <h2>Saison :</h2>
            <ul>
                {% for season in program.seasons %}
                    <li><a href="{{ path('wild_show_season', {'id': season.id }) }}">{{ season.year }}</a></li>
                {% else %}
                    <li>Aucune saison pour cette série</li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <a class="btn btn-lg" href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>

{% endblock %}
